%h1= "#{@view_model.product.name} Credentials"

= simple_form_for(:product, url: update_credentials_companies_carrier_carrier_product_path(@view_model.carrier, @view_model.product)) do |f|

  - if @view_model.test_fields
    %h2 Live
  - @view_model.live_fields.each do |field|
    = f.input field[:key], field[:options]

  - if @view_model.test_fields
    %h2 Test
    - @view_model.test_fields.each do |field|
      = f.input field[:key], field[:options]

  %ul.actions
    %li
      = link_to("Cancel", companies_carrier_path(@view_model.carrier))
    %li.primary
      = submit_tag("Save")
