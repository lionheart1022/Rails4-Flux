%tr
  %td.state{ :class => data.state }
    = ViewHelper::Shipments.state_name(data.state)
  %td.id
    = link_to(data.unique_shipment_id, customers_shipment_path(data))
  %td.date
    = data.shipping_date
  %td
    = "#{data.sender_company_name},"
    %br/
    = data.sender.country_name
  %td
    = "#{data.recipient_company_name},"
    %br/
    = data.recipient.country_name
  %td
    = suffixed_name(name: data.carrier_product.name, company: data.company)
  %td.awb
    = render(partial: "components/shared/carrier_products/awb", locals: { shipment: data })

- if data.description.present?
  %tr.description
    %td{ :colspan => '7' }= data.description
