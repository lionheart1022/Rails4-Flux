<% disable_field_error_proc do %>
  <div class="form-input-multigroup">
    <div class="form-input-group">
      <%= form.label :name %>
      <%= form.text_field :name, autofocus: true %>
      <%= render_form_error(form, :name) %>
    </div>

    <div class="form-input-group">
      <%= form.label :initials %>
      <%= form.text_field :initials, class: "small-input" %>
      <%= render_form_error(form, :initials) %>
    </div>
  </div>

  <div class="form-input-group">
    <%= form.label :domain %>
    <%= form.text_field :domain, placeholder: "e.g. www.book2company.com" %>
  </div>

  <div class="form-input-group">
    <%= form.label :info_email %>
    <%= form.text_field :info_email %>
    <div class="form-input-hint">Used as the sender of notification mails</div>
  </div>

  <% if form.object.user_fields? %>
    <h3>User</h3>

    <div class="form-input-group">
      <%= form.label :user_email %>
      <%= form.text_field :user_email %>
      <%= render_form_error(form, :user_email) %>
    </div>
  <% end %>
<% end %>
