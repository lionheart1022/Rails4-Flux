<header class="page-header">
  <h1>
    Carrier:
    <strong><%= @carrier.name %></strong>
    <%= link_to "Back", url_for(action: "index"), class: "page-header-back-btn" %>
  </h1>
</header>

<table class="table">
  <thead>
    <tr>
      <th width="10%">#</th>
      <th width="40%"><%= @carrier.name %> Product</th>
      <th>Code</th>
    </tr>
  </thead>
  <tbody>
    <% @carrier_products.each do |carrier_product| %>
      <tr>
        <td><%= carrier_product.id %></td>
        <td><%= carrier_product.name %></td>
        <td><%= carrier_product.product_code %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Copy</h2>

<%= link_to "Create a copy of this carrier", url_for(action: "new_copy") %>
