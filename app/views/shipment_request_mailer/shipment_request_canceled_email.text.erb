<% if @is_customer %>
  <%= "#{@customer.name} canceled RFQ with id: #{@shipment.unique_shipment_id}" %>
  <%= ViewHelper::ShipmentRequests.customer_email_shipment_request_url_with_common_or_company_domain(shipment_request: @shipment_request, company: @company) %>
<% else %>
  <%= "#{@company.name} canceled RFQ with id: #{@shipment.unique_shipment_id}" %>
  <%= ViewHelper::ShipmentRequests.company_email_shipment_request_url_with_common_or_company_domain(shipment_request: @shipment_request, company: @company) %>
<% end %>

<%= render "/components/shared/mailer/booking", shipment: @shipment %>