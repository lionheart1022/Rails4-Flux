%h1 Select customer

- if @customers.size > 0
  %table
    %tr
      %th{ width: 100 } ID
      %th Customer

    - @customers.each do |customer|
      %tr
        %td= customer.customer_id
        %td= link_to(customer.name, select_carrier_companies_customer_scoped_carrier_pickups_path(selected_customer_identifier: customer.id))
- else
  %p.no_results No customers

.pagination
  = paginate(@customers)
