%header.page_header
  %h1
    Surcharges
    %small All carriers

%ul.box_list
  - @carriers.each do |carrier|
    %li.box_list_item
      .box_list_item__inner
        = link_to(carrier.name, current_context.company_feature_flag_enabled?("monthly-fuel") ? v2_companies_carrier_surcharges_path(carrier.id) : companies_carrier_surcharges_path(carrier.id), class: "box_list_item__primary_label", title: carrier.name)
        - if carrier.owner_carrier
          .box_list_item__secondary_label{ title: carrier.owner_carrier.company.name }
            = carrier.owner_carrier.company.name
        - else
          .box_list_item__secondary_label
            N/A
